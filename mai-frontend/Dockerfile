# ====== Build stage ======
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
# ensure production API base is baked in
ENV VITE_API_BASE=/api
RUN npm run build

# ====== Nginx serve stage ======
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
